#!/bin/bash
#Ensure so system is loaded
sleep 10
while true; do
    if [ -b /dev/sda1 ]; then
        mattrib -HS a:\*
	echo 1 > /dev/ttyUSB0
    fi
    PROC=$(ps -ef | grep "canto-daemon" | grep -v "grep" | wc -l)
    if [ $PROC -eq 0 ]; then
        /usr/bin/canto-daemon -p 7070 &
    fi
    sleep 3
done
